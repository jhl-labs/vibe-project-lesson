# ===========================
# Environment Configuration
# ===========================
# 이 파일을 .env로 복사하고 값을 설정하세요
# cp .env.example .env

# Application
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database
# SQLite (개발용)
DATABASE_URL=sqlite+aiosqlite:///./dev.db

# PostgreSQL (프로덕션용)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Logging
LOG_LEVEL=DEBUG
